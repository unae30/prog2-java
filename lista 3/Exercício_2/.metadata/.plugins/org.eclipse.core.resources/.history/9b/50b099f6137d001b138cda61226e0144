package matriz;
import java.util.Scanner;

public class Matriz{
	private int numeroDeLinhas;
	private int numeroDeColunas;
	private int num[][];	
	
	Scanner sc = new Scanner(System.in);
	
	public Matriz(int numeroDeLinhas, int numeroDeColunas){
		this.numeroDeLinhas = numeroDeLinhas;
		this.numeroDeColunas = numeroDeColunas;
	}
	
	public int getNumeroDeLinhas() {
		return numeroDeLinhas;
	}

	public void setNumeroDeLinhas(int numeroDeLinhas) {
		this.numeroDeLinhas = numeroDeLinhas;
	}

	public int getNumeroDeColunas() {
		return numeroDeColunas;
	}

	public void setNumeroDeColunas(int numeroDeColunas) {
		this.numeroDeColunas = numeroDeColunas;
	}

	public int[][] getNum() {
		return num;
	}

	public void setNum(int[][] num) {
		this.num = num;
	}
	
	public void informeNumLinhas(){
		System.out.println("O numero de linhas da matriz é " + this.numeroDeLinhas);
	}
	
	public void informeNumColunas() {
		System.out.println("O numero de colunas da matriz é " + this.numeroDeColunas);
	}
	
	public int [][] preencheMatriz() {
		for(int i=0; i< this.num.length ; i++) {
			for(int j=0; j< this.num[i].length ; j++) {
			System.out.println("Digite o numero da linha " + (i+1) + " da coluna " + (j+1));
			num [i][j] = sc.nextInt(); 
			}
		}
		return this.num;
	}
	
	public void editaMatriz(int num[][]) {
		System.out.println("Qual posição (em linhas e colunas) da matriz deseja alterar?");
		int linha = sc.nextInt();
		int coluna = sc.nextInt();
		System.out.println("Digite o novo valor: ");
		this.num[linha][coluna] = sc.nextInt();
	}
	
	public void matrizTransposta(int num[][], int i, int j) {
		if(i==j) {
			for(i = 0; i < num.length;i++) {
				for(j=0; j<num[i].length; j++) {
					this.num[j][i] = num[i][j];
				}	
			}
		}
		else {
			System.out.println("Matriz de tamanho inválido para transposta");
		}
	}
	
	public void imprimeMatriz(int num[][]) {
		for(int i = 0; i < num.length;i++) {
			for(int j = 0; j < num[i].length; j++) {
				System.out.print(num[i][j] + " ");
			}
			System.out.println();
		}
	}
}

