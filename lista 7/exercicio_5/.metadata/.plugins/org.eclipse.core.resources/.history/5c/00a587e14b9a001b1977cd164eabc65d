package exe5;

import java.util.InputMismatchException;
import java.util.Scanner;

public class Questao2 {

	public static void main(String[] args) {
		
		int x = 0;
		int y = 0;
		double r = 0;
		try {
		Scanner teclado = new Scanner(System.in);
		System.out.println("Eu sei dividir!");
		System.out.println("Informe o primeiro valor: ");
		x = teclado.nextInt();
		System.out.println("Informe o segundo valor: ");
		y = teclado.nextInt();
		r = (x/y);
		}catch (InputMismatchException e) {
			System.out.println("ERRO: Entrada de dados inválida! "
					+ "O número de ser um inteiro! \r\n Tente novamente.");
			
		}catch (ArithmeticException e) {
			System.out.println("ERRO: O denominador não pode ser 0. \r\n Tente novamente.");
		}catch(Exception e) {
			System.out.println("Erro inesperado! \r\n Tente novamente.");
		}finally {
			return;
		}
		System.out.println("O resultado da divisão é: " + r);
	}

}
