package formasGeometricas;

public class FormasGeometricasSolidas extends FabricaAbstrataDeFormasGeometricas{

	public FormasGeometricas desenha(String nomeDaForma) {
		if(nomeDaForma.equals("Círculo"))
			return new Circulo("(Desenho Sólido: ESFERA)");
		else if(nomeDaForma.equals("Quadrado"))
			return new Quadrado("Desenho Sólido: CUBO");
		else if(nomeDaForma.equals("Retângulo"))
			return new Retangulo("Desenho Sólido: PARALELEPÍPEDO");
		else if(nomeDaForma.equals("Triângulo"))
			return new Triangulo("Desenho Sólido: PRISMA");
		else {
			return new FormasGeometricas(nomeDaForma);
		}
	}
	
	
}
